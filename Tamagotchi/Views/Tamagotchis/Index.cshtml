@{
  Layout = "_Layout";
}
@using TamagotchiGame.Models
  <h1>Your Tamagotchis!</h1>
  <ul>
    if (Model.Count == 0)
    {
      <li>You have no Tamagotchis</li>
    }
    @foreach (Tamagotchi tamagotchi in Model)
    {
      if (tamagotchi.GetLife())
      {
        <li>
            <a href="/tamagotchis/@tamagotchi.Id">@tamagotchi.Name, @tamagotchi.Food, @tamagotchi.Sleep, @tamagotchi.Happiness</a>
        </li>
      }
    }
  </ul>
  <a href="/tamagotchis/new">Add Another Tamagotchi</a>
  <a href="/tamagotchis/deleteAll">Delete All Tamagotchis</a>

